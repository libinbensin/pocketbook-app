<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/add_reminder_min_height"
    android:background="@color/WhiteGrey">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_reminder_title"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="18dp"
        android:textColor="@color/CricketBlue"
        android:textStyle="bold|italic"
        android:textSize="18sp"/>
    <Button
        android:id="@+id/addReminderButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/add_reminder_circle"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="20dp"
        android:text="@string/add_reminder_button_symbol"
        android:textSize="25sp"
        android:textColor="@color/White"
        android:textStyle="bold"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@color/CricketBlue"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>